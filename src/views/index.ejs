<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('./components/nav', {names: names}) %>
    <div class="content-box">
        <div class="item-box">
            <% if (Object.keys(items).length !== 0) { items.forEach(item => { %>
                <div class="item"> 
                    <a href='/<%=item[0]%>/<%=item[1]%>'>
                        <%= item[1] %>
                    </a>
                    <form action="/<%=item[0]%>/<%=item[1]%>/del" method="POST">
                        <button type="submit">DELETE</button>
                    </form>
                </div>
            <% })} %>
        </div>
        <% if (locals.category) { %>
        <a href ='/<%=category%>/add'>
            Add an item!
        </a> 
        <% } %>
    </div>
</body>
</html>